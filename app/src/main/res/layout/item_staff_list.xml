<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            card_view:cardBackgroundColor="@color/cardview_light_background"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true">


            <RelativeLayout
                android:id="@+id/rl_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingEnd="5dp"
                android:paddingStart="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">


                        <LinearLayout
                            android:id="@+id/ll_top"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:weightSum="1">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.25"
                                android:padding="5dp">

                                <ImageView
                                    android:id="@+id/img_staff_profile"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/ic_user_account" />

                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.75"
                                android:padding="5dp">


                                <com.consturctionbuddy.custom.CustomRegularTextView
                                    android:id="@+id/tv_staff_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:text="@string/demoText"
                                    android:textSize="14sp"
                                    android:visibility="visible" />


                                <com.consturctionbuddy.custom.CustomRegularTextView
                                    android:id="@+id/tv_staff_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_staff_name"
                                    android:layout_marginTop="1sp"
                                    android:text="@string/demoText"
                                    android:textSize="14sp" />

                                <com.consturctionbuddy.custom.CustomRegularTextView
                                    android:id="@+id/tv_staff_jod"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_staff_email"
                                    android:singleLine="true"
                                    android:text="@string/demoText"
                                    android:textSize="14sp"
                                    android:visibility="visible" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_staff_jod"
                                    android:orientation="horizontal"
                                    android:weightSum="1">

                                    <LinearLayout
                                        android:id="@+id/ll_edit"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:layout_weight="0.5"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="18dp"
                                            android:layout_height="18dp"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:src="@android:drawable/ic_menu_edit" />

                                        <com.consturctionbuddy.custom.CustomRegularTextView
                                            android:id="@+id/tv_edit"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:singleLine="true"
                                            android:text="Edit"
                                            android:textSize="14sp"
                                            android:visibility="visible" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/ll_delete"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:layout_marginEnd="5dp"
                                        android:layout_weight="0.5"
                                        android:gravity="end"
                                        android:orientation="horizontal">


                                        <ImageView
                                            android:layout_width="18dp"
                                            android:layout_height="18dp"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:src="@android:drawable/ic_menu_delete" />

                                        <com.consturctionbuddy.custom.CustomRegularTextView
                                            android:id="@+id/tv_delete"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:singleLine="true"
                                            android:text="Delete"
                                            android:textSize="14sp"
                                            android:visibility="visible" />


                                    </LinearLayout>
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>